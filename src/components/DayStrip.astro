---
const {
    imageUrl,
} = Astro.props;
---
<div
    class="day-strip"
    style={{
        backgroundImage: `url(${imageUrl})`,
    }}
/>

<style>
.day-strip {
    border-color: var(--accent-color-brown-2);
    border-style: solid;
    border-width: 2px 0;
    background-color: var(--accent-color-brown-3);
    background-image: url(${imageUrl});
    background-position: left;
    background-repeat: repeat-x;
    background-size: contain;
    height: 120px;
}
</style>
