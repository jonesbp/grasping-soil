---
const { title } = Astro.props;
---

<div class="page-header">
    <a href="/" class="home-badge">
        GS
    </a>
    <div class="image-clipper">
        <img src="/images/hero.png" alt="placeholder hero image" />
    </div>
    <div class="text-overlay">
        <div class="title">
            <h1>{title}</h1>
        </div>
    </div>
</div>

<style>
.page-header {
    display: block;
    margin: 2rem auto 4rem auto;
    max-width: var(--max-content-width);
    position: relative;
    width: auto;
}

.page-header .home-badge {
    align-items: center;
    background-color: var(--primary-text-color);
    border-radius: 50%;
    color: #fff;
    display: flex;
    font-family: 'Ocotillo', sans-serif;
    font-size: 54px;
    justify-content: center;
    opacity: .7;
    position: absolute;
        top: 20px;
        left: 20px;
    height: 96px;
    width: 96px;
    text-decoration: none;
    transition: .3s all ease;
    z-index: 10;
}

.page-header .home-badge:hover {
    opacity: 1;
}

.page-header .image-clipper {
    aspect-ratio: 4.8;
    border-color: var(--primary-text-color);
    border-style: solid;
    border-width: 0 0 4px 0;
    overflow: hidden;
}

.page-header img {
    display: block;
    max-width: 100%;
    opacity: .7;
    position: relative;
    z-index: 0;
}

.page-header .text-overlay {
    height: 100%;
    position: absolute;
        top: 0;
        right: 0;
        left: 20px;
    z-index: 1;
}

.page-header .title {
    color: var(--primary-text-color);
    font-family: 'Paix', sans-serif;
    font-size: 6rem;
    font-weight: 700;
    line-height: 80%;
    margin: 0;
    position: absolute;
        left: 0;
        bottom: 2px;
    text-transform: uppercase;
    z-index: 1;
}

@media all and (max-width: 1120px) {
    .page-header .title {
        font-size: 5rem;
    }
}

@media all and (max-width: 960px) {
    .page-header .title {
        font-size: 4.5rem;
        bottom: -.9rem;
    }
}

@media all and (max-width: 840px) {
    .page-header .title {
        font-size: 4rem;
    }
}

@media all and (max-width: 740px) {
    .page-header .title {
        font-size: 3rem;
        bottom: -.5rem;
    }
}

@media all and (max-width: 540px) {
    .page-header .title {
        font-size: 2.5rem;
        bottom: -.4rem;
    }
}

h1 {
    display: inline;
    font-size: 1em;
    margin: 0;
}
</style>
