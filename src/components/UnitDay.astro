---
const {
    unit,
    day,
    headline,
} = Astro.props;
---
<div class={`unit-day unit-${unit}`}>
    <div class="overlay">
        <div class="header-frame">
            <h2 id={`day-${day}`}>Day {day}: {headline}</h2>
        </div>
        <div class="content-frame">
            <div class="content">
                <slot />
            </div>
        </div>
    </div>
    <div class={`underlay ${(day % 2 === 0) ? 'left' : 'right'}`}>
        <img
            aria-hidden="true"
            alt=""
            src={`/images/unit-${unit}/day-${day}-color.jpg`}
            height="1000"
        />
    </div>
</div>

<style>
.unit-day {
    margin: 4rem auto 8rem auto;
    max-width: var(--max-page-width);
    position: relative;
    width: 100%;
}

.overlay {
    position: relative;
    z-index: 1;
}

.underlay {
    position: absolute;
    top: -240px;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 0;
}

.underlay img {
    position: sticky;
    top: 40px;
    margin-top: 200px;
    height: 600px;
    opacity: 0.3;
}

.underlay.left img {
    margin-left: -140px;
}

.underlay.right img {
    left: 100%;
    margin-right: -140px;
}

.header-frame {
    border-style: solid;
    border-width: 0 0 4px 0;
    margin: 0;
    padding: 0;
}

.unit-day .header-frame {
    border-color: var(--secondary-text-color);
}

h2 {
    border-style: solid;
    border-width: 0 0 1px 0;
    color: var(--primary-text-color);
    font-size: 2rem;
    font-weight: 300;
    margin: 0;
    padding-bottom: 1rem;
}

.unit-day h2 {
    border-color: var(--tertiary-text-color);
}

.content-frame {
    position: relative;
        top: 0;
    margin: 0;
    padding: 4rem 2rem;
}

.content-frame .content {
    position: relative;
    z-index: 1;
}

.unit-day :global(p) {
    font-size: 1.2rem;
    font-weight: 300;
    line-height: 140%;
    max-width: 760px;
}
</style>