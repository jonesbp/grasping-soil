---
const {
    unit,
    day,
    headline,
} = Astro.props;

const strataSvg = (await import("../assets/strata.svg?raw")).default;
---
<div class={`unit-day unit-${unit}`}>
    <div class="header-frame">
        <h2 id={`day-${day}`}>Day {day}: {headline}</h2>
    </div>
    <div class="content-frame">
        <div class="content">
            <slot />
        </div>
        <div class="lines-underlay">
            <div class="svg-container" set:html={strataSvg} />
            <div class="fade-screen" />
        </div>
    </div>
</div>

<style>
.unit-day {
    margin: 4rem auto 8rem auto;
    max-width: var(--max-page-width);
    width: 100%;
}

.header-frame {
    border-style: solid;
    border-width: 0 0 4px 0;
    margin: 0;
    padding: 0;
}

.unit-day.unit-1 .header-frame {
    border-color: var(--accent-color-unit-1);
}
.unit-day.unit-2 .header-frame {
    border-color: var(--accent-color-unit-2);
}
.unit-day.unit-3 .header-frame {
    border-color: var(--accent-color-unit-3);
}
.unit-day.unit-4 .header-frame {
    border-color: var(--accent-color-unit-4);
}

h2 {
    border-style: solid;
    border-width: 0 0 1px 0;
    color: var(--primary-text-color);
    font-size: 2rem;
    font-weight: 300;
    margin: 0;
    padding-bottom: 1rem;
}

.unit-day.unit-1 h2 {
    border-color: var(--accent-outline-unit-1);
}
.unit-day.unit-2 h2 {
    border-color: var(--accent-outline-unit-2);
}
.unit-day.unit-3 h2 {
    border-color: var(--accent-outline-unit-3);
}
.unit-day.unit-4 h2 {
    border-color: var(--accent-outline-unit-4);
}

.content-frame {
    position: relative;
        top: 0;
    margin: 0;
    padding: 4rem 2rem;
}

.content-frame .content {
    background-color: rgba(var(--background-color-rgb), .7);
    position: relative;
    z-index: 1;
}

.content-frame .lines-underlay {
    position: absolute;
        top: 0;
        left: 0;
    width: 100%;
    z-index: 0;
}

.content-frame .lines-underlay .svg-container {
    opacity: .5;
    position: relative;
    width: auto;
    z-index: 0;
}

.content-frame .fade-screen {
    background: linear-gradient(to top, var(--background-color) 0%, rgba(var(--background-color-rgb), 0) 100%);
    height: 100%;
    position: absolute;
        right: 0;
        bottom: 0;
        left: 0;
    z-index: 1;
}

.unit-day.unit-1 .lines-underlay :global(svg path) {
    stroke: var(--accent-color-unit-1);
}
.unit-day.unit-2 .lines-underlay :global(svg path) {
    stroke: var(--accent-color-unit-2);
}
.unit-day.unit-3 .lines-underlay :global(svg path) {
    stroke: var(--accent-color-unit-3);
}
.unit-day.unit-4 .lines-underlay :global(svg path) {
    stroke: var(--accent-color-unit-4);
}

.unit-day :global(p) {
    font-size: 1.2rem;
    font-weight: 300;
    line-height: 140%;
    max-width: 760px;
}
</style>