---
const {
    unit,
    imageSrc,
    imageAlt,
} = Astro.props;
---
<div class={`unit-strip unit-${unit}`}>
    <div class="contents">
        <img src={imageSrc} alt={imageAlt} />
    </div>
</div>

<style>
.unit-strip {
    background-color: white;
    border-style: solid;
    border-width: 4px 0 0 0;
    margin-bottom: 2rem;
    position: relative;
    z-index: 1;
}

.unit-strip .contents {
    margin: 0 auto;
    max-width: var(--max-content-width);
}

.unit-strip .contents img {
    display: block;
    max-width: 100%;
}
</style>