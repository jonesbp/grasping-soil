:root {
	--max-content-width: 1280px;
	--max-page-width: 960px;
	--primary-text-color: #2d3734;
	--secondary-text-color: #565d5d;
	--tertiary-text-color: #7d8683;
	--background-color: #ffffff;
	--background-color-rgb: 255, 255, 255;
	--background-light-color: #fcfdfc;
	--decorative-warm-gray: #cbcfcd;
}

html {
	box-sizing: border-box;
}
*, *:before, *:after {
	box-sizing: inherit;
}

html {
	font-family: 'SeravekWeb', Seravek, 'Gill Sans Nova', Ubuntu, Calibri, 'DejaVu Sans', source-sans-pro, sans-serif;
	font-weight: normal;
}

body {
	background-color: var(--background-color);
	color: var(--secondary-text-color);
	margin: 0;
	padding: 0;
}

main {
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	min-height: 100vh;
}

footer {
	min-height: 100px;
}

footer .content {
	border-color: var(--decorative-warm-gray);
	border-style: solid;
	border-width: 3px 0 0 0;
	display: grid;
	grid-template-columns: 3fr 2fr;
	margin: 0 auto;
	max-width: var(--max-content-width);
	padding: 2rem 0 3rem 0;
	width: 90%;
}

@media all and (max-width: 840px) {
	footer .content {
		grid-template-columns: 100%;
		row-gap: 2rem;
	}
}


footer .left-side {
	column-gap: 4rem;
	display: flex;
	justify-content: flex-start;
}

@media all and (max-width: 512px) {
	footer .left-side {
		flex-direction: column;
		row-gap: 2rem;
	}
}

footer .content ul {
	font-size: 1.4rem;
	font-weight: 400;
	list-style-type: none;
	margin: 0;
	padding: 0;
}

footer .content  ul.primary > li {
	font-family: 'Paix', sans-serif;
	margin-bottom: .25em;
	text-transform: uppercase;
}

footer .content li > ul {
	font-size: 1.2rem;
	font-weight: 300;
	margin-top: .5em;
	padding-left: .5em;
}

footer .content li > ul li {
	font-family: 'SeravekWeb', Seravek, 'Gill Sans Nova', Ubuntu, Calibri, 'DejaVu Sans', source-sans-pro, sans-serif;
	margin-top: .25em;
	text-transform: none;
}

footer .content a {
	color: var(--primary-text-color);
	text-decoration-color: transparent;
	transition: all ease 0.3s;
}

footer .content a:hover {
	text-decoration-color: var(--primary-text-color);
}

footer .right-side {
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
	text-align: right;
}

@media all and (max-width: 512px) {
	footer .right-side {
		text-align: left;
	}
}
</style>
