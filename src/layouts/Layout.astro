---
interface Props {
	title: string;
	suppressFooter: boolean;
}

const {
	title,
	suppressFooter,
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		{!suppressFooter && (
			<footer>
				<div class="content">
					<div class="left-side">
						<div>
							<ul class="primary">
								<li>
									<a href="/syllabus">Syllabus</a>
									<ul>
										<li><a href="/units/1-soil-as-substrate">1. Soil as Substrate</a></li>
										<li><a href="/units/2-soil-as-archive">2. Soil as Archive</a></li>
										<li><a href="/units/3-soil-as-health">3. Soil as Health</a></li>
										<li><a href="/units/4-soil-as-belonging">4. Soil as Belonging</a></li>
									</ul>
								</li>
							</ul>
						</div>
						<div>
							<ul class="primary">
								<li>
									<a href="/essays">Essays</a>
								</li>
								<li>
									<a href="/reading-list">Reading List</a>
								</li>
								<li>
									<a href="/contributors">Contributors</a>
								</li>
							</ul>
						</div>
					</div>
					<div class="right-side">
						<div>&copy; 2024 / <a href="/colophon">Colophon</a></div>
					</div>
				</div>
			</footer>
		)}
	</body>
</html>
